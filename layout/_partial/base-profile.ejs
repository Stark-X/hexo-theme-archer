<div class="profile<%- theme.profile_sticky ? ' profile-sticky' : '' %>">
    <img class="profile-avatar<%- theme.avatar_border ? '' : ' hide-border' %>" alt="avatar" src= <%- url_for(theme.avatar) %> />
    <div class="profile-name"><%- theme.author || config.author %></div>
    <% if(theme.signature && theme.signature.length !== 0) { %>
        <div class="profile-signature">
            <%= theme.signature %>
        </div>
    <% } %>
    <% if(theme.social) { %>
        <div class="profile-social">
            <%- partial('base-social') %>
        </div>
    <% } %>
    <% if(theme.friends) { %>
        <div class="friends">
            <div>FRIENDS</div>
            <% for (name in theme.friends) { %>
                <% if(theme.friends[name]) { %>
                    <span>
                        <a href="<%- theme.friends[name] %>" target="_black"><%- name %></a>
                    </span>
                <% } %>
            <% } %>
        </div>
    <% } %>
    <% if(theme.about.enable) { %>
        <div class="profile-link-item">
            <a href="<%- url_for("/about") %>" class="about-me">ABOUT ME</a>
        </div>
    <% } %>
    <% if(theme.search.enable) { %>
        <% var baseSearchMeUrl %>
        <% switch (theme.search.engine) {
            case 'google': %>
                <% baseSearchMeUrl = 'https://www.google.com/search?q=site%3A' %>
                <% break
            case 'baidu': %>
                <% baseSearchMeUrl = 'https://www.baidu.com/s?wd=site%3A' %>
                <% break
            default: %>
                <% baseSearchMeUrl = 'https://www.bing.com/search?q=site%3A' %>
        <% } %>
        <div class="profile-link-item">
            <a href="<%- baseSearchMeUrl + theme.search.url %>" class="search-me">SEARCH</a>
        </div>
    <% } %>
</div>
